<?xml version="1.0" encoding="utf-8"?>
<fragment tools:context=".MapsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
        <fragment android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                class ="com.google.android.gms.maps.SupportMapFragment"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
            android:id="@+id/map"> </fragment>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_view"
            android:text="Enter"> </TextView>

        <EditText android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"
                android:hint="Input Address"> </EditText>


        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location"
                android:text="Search"
                android:onClick="onFindOnMap"
                android:layout_toRightOf="@+id/input"> </Button>
</fragment>

<!-- "Go" first to appear when app launched -->
